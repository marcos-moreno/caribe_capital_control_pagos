<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PayRegisterFragment">

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="728dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/vw_fakeview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.PaymentDetailsFragment">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/vw_fakeview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/hint_code"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="CÃ³digo:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtgroup"
                    style="@style/TextView.Normal.White"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="VEANMEVEANMEVEANMEVEANMEVEANMEVEANMEVEANMEVEANMEVEANME"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtcode" />

                <TextView
                    android:id="@+id/txtcode"
                    style="@style/TextView.Normal.White"
                    android:layout_width="312dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="VEANME"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtcicle"
                    style="@style/TextView.Normal.White"
                    android:layout_width="311dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="VEANME"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtgroup" />

                <TextView
                    android:id="@+id/txtdate"
                    style="@style/TextView.Normal.White"
                    android:layout_width="310dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="VEANME"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtcicle" />

                <TextView
                    android:id="@+id/hint_name"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Grupo:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_code" />

                <TextView
                    android:id="@+id/hint_role"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Ciclo:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtgroup" />

                <TextView
                    android:id="@+id/hint_fecha"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Fecha:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_role" />

                <TextView
                    android:id="@+id/hint_registro"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Tipo registro:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_fecha" />

                <TextView
                    android:id="@+id/hint_observations"
                    style="@style/TextView.Normal.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Observaciones:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_registro" />



                <EditText
                    android:id="@+id/txtobservations"
                    style="@style/TextView.Normal.White"
                    android:layout_width="394dp"
                    android:layout_height="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="19dp"
                    android:backgroundTint="@color/colorWhite"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="@color/colorWhite"
                    android:textIsSelectable="false"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_observations" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:id="@+id/relativeLayout3"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hint_registro"
                    app:layout_constraintTop_toTopOf="@+id/hint_registro" >

                    <Spinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/colorWhite"
                        android:spinnerMode="dropdown"
                        tools:listitem="@layout/item_spinner" />

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btn_show_description"
                    android:layout_width="47dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/editar"
                    app:layout_constraintStart_toEndOf="@+id/hint_observations"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"></ImageButton>


            </android.support.constraint.ConstraintLayout>






            <android.support.constraint.ConstraintLayout
                android:id="@+id/content_recicler"
                android:layout_width="409dp"
                android:layout_height="461dp"
                app:layout_constraintTop_toBottomOf="@+id/vw_fakeview3"
                tools:layout_editor_absoluteX="2dp">


                <LinearLayout
                    android:id="@+id/back_layout"
                    android:layout_width="399dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view">

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="410dp"
                    android:layout_height="411dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/back_layout"
                    app:layout_constraintVertical_bias="0.0">

                </android.support.v7.widget.RecyclerView>

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>