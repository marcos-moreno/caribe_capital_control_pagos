<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PayRegisterFragment">

    <ScrollView
        android:id="@+id/vw_fakeview"
        android:layout_width="465dp"
        android:layout_height="774dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/vw_fakeview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.PaymentDetailsFragment">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/vw_fakeview3"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">


                <TextView
                    android:id="@+id/hint_code"
                    style="@style/TextView.Normal.White"
                    android:layout_width="111dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="CÃ³digo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtgroup"
                    style="@style/TextView.Normal.White"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="00000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hint_name"
                    app:layout_constraintTop_toBottomOf="@+id/txtcode" />

                <TextView
                    android:id="@+id/txtcode"
                    style="@style/TextView.Normal.White"
                    android:layout_width="278dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="00000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/hint_code"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtcicle"
                    style="@style/TextView.Normal.White"
                    android:layout_width="275dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:text="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.701"
                    app:layout_constraintStart_toEndOf="@+id/hint_role"
                    app:layout_constraintTop_toBottomOf="@+id/txtgroup" />

                <TextView
                    android:id="@+id/txttype"
                    style="@style/TextView.Normal.White"
                    android:layout_width="185dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="P"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/hint_registro"
                    app:layout_constraintTop_toBottomOf="@+id/txtdate" />

                <TextView
                    android:id="@+id/txtdate"
                    style="@style/TextView.Normal.White"
                    android:layout_width="273dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="01/01/2019"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.545"
                    app:layout_constraintStart_toEndOf="@+id/hint_fecha"
                    app:layout_constraintTop_toBottomOf="@+id/txtcicle" />

                <TextView
                    android:id="@+id/hint_name"
                    style="@style/TextView.Normal.White"
                    android:layout_width="110dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Grupo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtcode" />

                <TextView
                    android:id="@+id/hint_role"
                    style="@style/TextView.Normal.White"
                    android:layout_width="112dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Ciclo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtgroup" />

                <TextView
                    android:id="@+id/hint_fecha"
                    style="@style/TextView.Normal.White"
                    android:layout_width="112dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Fecha"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_role" />


                <TextView
                    android:id="@+id/hint_registro"
                    style="@style/TextView.Normal.White"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Tipo registro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_fecha" />

                <TextView
                    android:id="@+id/hint_observations"
                    style="@style/TextView.Normal.White"
                    android:layout_width="389dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="Observaciones"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_registro" />

                <EditText
                    android:id="@+id/txtobservations"
                    style="@style/TextView.Normal.White"
                    android:layout_width="389dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/colorWhite"
                    android:ems="1"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textColorLink="@color/colorWhite"
                    android:textCursorDrawable="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.375"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hint_observations"
                    app:layout_constraintVertical_bias="0.0" />


            </android.support.constraint.ConstraintLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_theorical_payment"
                android:layout_width="394dp"
                android:layout_height="53dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vw_fakeview3">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_theorical_payment"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_theoric_payment"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1"
                    android:textColorHighlight="@color/colorOrange1"
                    android:textColorHint="@color/colorOrange1"
                    android:textColorLink="@color/colorOrange1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_real_payment"
                android:layout_width="394dp"
                android:layout_height="63dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_theorical_payment">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_real_payment"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_real_payment"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1"
                    android:textColorHighlight="@color/colorOrange1"
                    android:textColorHint="@color/colorOrange3"
                    android:textColorLink="@color/colorOrange1"
                    app:hintTextAppearance="@style/HintAppearance" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_return"
                android:layout_width="394dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_real_payment">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_return"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_return"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_input"
                android:layout_width="396dp"
                android:layout_height="53dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_return">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_contribution"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_input"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_penalty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_input">

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_saving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                android:visibility="invisible"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tiet_fee">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_saving"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_saving"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1"
                    android:visibility="invisible" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_total"
                android:layout_width="395dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColorHint="@color/colorOrange1"
                app:hintTextAppearance="@style/HintAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_penalty">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/tiet_total"
                    style="@style/StyledTilEditTextTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorOrange1"
                    android:drawableLeft="@drawable/ic_money"
                    android:focusable="false"
                    android:hint="@string/text_total_payment"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textColor="@color/colorOrange1" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_save_payment"
                android:layout_width="397dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/background_rounded"
                android:fontFamily="@font/montserrat_bold"
                android:text="Aceptar"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_total"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_fee"
                style="@style/StyledTilEditTextTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorOrange1"
                android:drawableLeft="@drawable/ic_money"
                android:focusable="false"
                android:hint="@string/text_penalty"
                android:inputType="numberDecimal"
                android:textColor="@color/colorOrange1"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_payment"
                tools:layout_editor_absoluteX="14dp" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
